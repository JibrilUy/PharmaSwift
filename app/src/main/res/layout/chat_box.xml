<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:backgroundTint="#f9c0c8">

    <!-- Use LinearLayout to align textviews horizontally -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Left-aligned message -->
        <TextView
            android:id="@+id/chatTextViewLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="@drawable/pink_chat_shape"
            android:text="Left Message" />

        <!-- Right-aligned message -->
        <TextView
            android:id="@+id/chatTextViewRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@drawable/green_chat_shape"
            android:padding="10dp"
            android:layout_gravity="end"
            android:text="Right Message"
            android:layout_weight="1"
            android:textColor="@color/black" />

    </LinearLayout>
</androidx.cardview.widget.CardView>